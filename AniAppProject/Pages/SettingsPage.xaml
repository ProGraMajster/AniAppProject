<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AniAppProject.Pages.SettingsPage"
             Title="SettingsPage">
    <VerticalStackLayout>
        <HorizontalStackLayout>
            <Label Text="Co ile otworzeń strony tytułu wyświetlić reklamę pełno ekranową"/>
            <Picker x:Name="pickerFullScreenAd" >
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>3</x:String>
                        <x:String>4</x:String>
                        <x:String>5</x:String>
                        <x:String>6</x:String>
                        <x:String>7</x:String>
                        <x:String>8</x:String>
                        <x:String>9</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
        </HorizontalStackLayout>
                <Button x:Name="btnVersion" VerticalOptions="EndAndExpand"
                        BackgroundColor="Transparent"
                        HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>