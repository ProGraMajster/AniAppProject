	  <MauiXaml Update="UI\StatSeriesView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net8.0-ios'">
	  <PackageReference Include="Plugin.MauiMTAdmob">
	    <Version>1.4.3</Version>
	  </PackageReference>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net8.0-maccatalyst'">
	  <PackageReference Include="Plugin.MauiMTAdmob">
	    <Version>1.4.3</Version>
	  </PackageReference>
	</ItemGroup>

	<ItemGroup Condition="'$(TargetFramework)' == 'net8.0-android34.0'">
	  <PackageReference Include="Plugin.MauiMTAdmob">
	    <Version>1.4.3</Version>
	  </PackageReference>
	</ItemGroup>

</Project>
