	  </MauiXaml>
	  <MauiXaml Update="UI\PromotedSeries.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="UI\RelatedSeriesView.xaml">
	    <Generator>MSBuild:Compile</Generator>
	  </MauiXaml>
	  <MauiXaml Update="UI\SerieView.xaml">
	    <Generator>MSBuild:Compile</Generator>
