<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AniAppProject.UI.GroupView"
             x:Name="groupView"
             Margin="5,10">
    <StackLayout>
        <Label Text="{Binding Title, Source={x:Reference groupView}}" Margin="10,2,2,2" FontSize="Title" HorizontalTextAlignment="Center" FontAttributes="Bold"/>
        <ScrollView Orientation="Both" HorizontalScrollBarVisibility="Always">
            <HorizontalStackLayout x:Name="hsl"/>
        </ScrollView>
    </StackLayout>
</ContentView>
